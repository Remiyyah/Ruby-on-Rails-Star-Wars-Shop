<style>
body {
  font-family: Arial, sans-serif;
  background: linear-gradient(to bottom, #ae2896, #509bf5);
  color: black;
}

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 7px;
  }

  h1 {
    text-align: center;
    color: white;
    font-weight: bold;
  }

  .item-details {
    margin-top: 20px;
  }

  .item {
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #fff;
  }

  .image img {
    max-height: 400px;
    content-align: center;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: auto;
    }

  .price {
    font-weight: bold;
    color: green;
    font-size: 30px;
  }

  .btn-primary {
    display: block;
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    background-color: #007bff;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .btn-primary:hover {
    background-color: #0056b3;
  }
  
  .dropdown {
      position: relative;
      display: inline-block;
  }
  
  .dropdown-toggle-categories {
      padding: 10px 20px;
      color: #fff;
      text-decoration: none;
      font-size: 18px;
      font-weight: bold;
      background-color: #333;
      border-radius: 5px;
      transition: background-color 0.3s ease; 
  }
  
  .dropdown-toggle-categories:hover {
      background-color: #555; 
  }
  
  .flex-parent-button {
      display: flex;
      align-items: center;
  }
  
  .flex-child-button {
      margin-right: 10px; 
  }
</style>
<body>
  <div class="container">
    <h1><%=@items.name%></h1>
    <div class="item-details">
      <div class="item">
        <div class="image"><%= image_tag(@items.image) %></div>
        <div class="description"><%= @items.description %></div>
        <div class="price">$<%= @items.price %></div>
        <div class="location">Ships from <%= @items.location %></div>
        <div class="flex-parent-button">
          <div class="flex-child-button return"><%=link_to "Return to Shop", items_path, class: "btn btn-primary"%></div>
          <div class="flex-child-button favorite">
              <%=button_to "Favorite", favoriting_item_item_path(@items), method: :post, class: "btn btn-primary"%>
          </div>
          <div class="flex-child-button review"><%=link_to "Reviews", item_reviews_path(@items), class: "btn btn-primary"%></div>
          <div class="flex-child-button cart"><%=button_to "Add to Cart", add_to_cart_item_path(@items), method: :post, class: "btn btn-primary"%></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
