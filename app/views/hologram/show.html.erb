<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: black;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 7px;
  }

  h1 {
    text-align: center;
    color: white;
    font-weight: bold;
  }

  .holo-details {
    margin-top: 20px;
  }

  .holo {
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #fff;
  }

  .image img {
    max-height: 400px;
    content-align: center;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: auto;
    }

  .price {
    font-weight: bold;
    color: green;
    font-size: 30px;
  }

  .btn-primary{
    background-color: #18adc4;
    border-color: black;
    border-width: 2px;
    margin-top: 10px;
    width: auto;
    height: 45px;
    text-align: center;
    vertical-align: center;
    font-size: 20px;
    font-weight: bold;
  }
  .flex-parent-button {
    display: inline-block;
  }

  .flex-child-button {
    display: inline-block;
    padding: 10px;
  }
  .cart{
    padding-left: 175px;
  }
</style>
<body>
  <div class="container">
    <h1><%=@hologram.actor%></h1>
    <div class="holo-details">
      <div class="holo">
        <div class="image"><%= image_tag(@hologram.image) %></div>
        <div class = "price">$<%= @hologram.price %></div>
        <div class="description"><%= @hologram.description %></div>
        <div class="flex-parent-button">
          <div class="flex-child-button return"><%=link_to "Return to Shop", hologram_path, class: "btn btn-primary"%></div>
          <div class="flex-child-button cart"><%=link_to "Book", new_hologram_booking_path(@hologram) , class: "btn btn-primary"%></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
