<html>
<style>
  body {
    font-family: Arial, sans-serif;
  }

  form {
    max-width: 400px;
    margin: 0 auto;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }

  input[type="text"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
  }

  .error {
    color: red;
    font-weight: bold;
  }
</style>

<body>
  <h1>Checkout</h1>
  <% if @error %>
    <p class="error"><%= @error %></p>
  <% end %>
  <h1>Process Payment</h1>
  <%= form_with url: payments_process_payment_path, method: :post do |form| %>
    <%= form.label :card_number %>
    <%= form.text_field :card_number %><br>

    <%= form.label :card_name %>
    <%= form.text_field :card_name %><br>

    <%= form.label :card_expiry %>
    <%= form.text_field :card_expiry, placeholder: 'MM/YY' %><br>

    <%= form.label :card_cvv %>
    <%= form.text_field :card_cvv %><br>

    <%= form.submit "Pay" %>
  <% end %>
</body>
</html>
